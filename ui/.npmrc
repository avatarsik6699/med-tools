save-exact=true
# Сохранять зависимости с точной версией

package-lock=true
# Всегда создавать package-lock.json для детерминированных сборок

fund=false
# Не показывать уведомления о финансировании пакетов

audit=true
# Включить автоматическую проверку уязвимостей при установке

engine-strict=true
# Ошибка, если версия Node.js или npm не соответствует engines в package.json

# Можно добавить прокси или реестр, если используется приватный npm:
# registry=https://registry.npmjs.org/

# Для кэширования пакетов в CI:
# cache=~/.npm

# Для предотвращения автоматического запуска скриптов postinstall:
# ignore-scripts=true